{
  "name": "@web3auth/wallet-connect-plugin",
  "version": "0.1.0",
  "description": "wallet connect wallet side plugin for Web3Auth",
  "keywords": [
    "web3Auth/wallet-connect-plugin",
    "web3Auth",
    "multichainWallet",
    "blockchain",
    "ethereum",
    "solana"
  ],
  "main": "dist/walletConnectPlugin.cjs.js",
  "module": "dist/walletConnectPlugin.esm.js",
  "unpkg": "dist/walletConnectPlugin.umd.min.js",
  "jsdelivr": "dist/walletConnectPlugin.umd.min.js",
  "types": "dist/types/src/index.d.ts",
